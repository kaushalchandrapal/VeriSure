{
  "root": true,
  "ignorePatterns": ["node_modules", "**/dist/**/*", "dist", "**/env-config.js", "server.js"],
  "plugins": ["@typescript-eslint", "react", "prettier", "import", "react-hooks", "jsx-a11y"],
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 2015
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              }
            ]
          }
        ],
        "@typescript-eslint/no-empty-interface": "off"
      }
    }
  ]
}
