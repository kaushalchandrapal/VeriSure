{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",          // Node.js 14+ supports ES2020
    "module": "CommonJS",         // Use CommonJS for Node.js compatibility
    "moduleResolution": "node",
    "rootDir": "./src",
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
